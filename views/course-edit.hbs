<h1>Редактировать{{courses.title}}</h1>
<form action="/courses/edit" method="POST">
 <div class="input-field ">
    <input name="title" id="title" type="text" class="validate" required value="{{courses.title}}" >
    <label for="title">Називания Курса</label>
     <span class="helper-text" data-error="curs nomi" ></span>
  </div>
 <div class="input-field ">
    <input name="price" id="price" type="number" class="validate" required value="{{courses.price}}"  min="1">
    <label for="price">Сена Курса</label>
    <span class="helper-text" data-error="curs narhi" ></span>
  </div>
 <div class="input-field ">
    <input name="img" id="img" type="text" class="validate" required value="{{courses.img}}" >
    <label for="img">URL картинки</label>
    <span class="helper-text" data-error="curs rsacmi" ></span>
  </div>
  <input type="hidden" name="id" value="{{courses.id}}">
  <button class="btn btn-primy">Редактировать курса</button>
</form>