<h1>Add car page</h1>
<form action="/add" method="POST">
 <div class="input-field ">
    <input name="title" id="title" type="text" class="validate" required >
    <label for="title">Називания Курса</label>
     <span class="helper-text" data-error="curs nomi" ></span>
  </div>
 <div class="input-field ">
    <input name="price" id="price" type="number" class="validate" required  min="1">
    <label for="price">Сена Курса</label>
    <span class="helper-text" data-error="curs narhi" ></span>
  </div>
 <div class="input-field ">
    <input name="img" id="img" type="text" class="validate" required >
    <label for="img">URL картинки</label>
    <span class="helper-text" data-error="curs rsacmi" ></span>
  </div>
  <button class="btn btn-primy">Добавит курса</button>
</form>